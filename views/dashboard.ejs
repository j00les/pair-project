<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <style>
      .form {
        border: solid;
        width: 500px;
        margin: 30px auto;
      }
      form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        justify-content: space-between;
      }
      label {
        display: flex;
        flex-direction: column;
      }
      /* navbar */
      body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
      }

      .topnav {
        overflow: hidden;
        background-color: #333;
      }

      .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }
      .container {
        width: 600px;
        margin: 50px auto;
      }
    </style>
  </head>
  <body>
    <nav class="topnav">
      <a href="/register">Register</a>
    </nav>
    <div class="container">
      <h2>Bank Customers</h2>
      <form action="/profiles" method="get">
        <label for="">---SEARCH---</label>
        <input autocomplete="off" type="text" name="search" />
        <button type="submit">search</button>
      </form>
      <br /><br />
      <label for="">SORT BY: </label>
      <button><a href="/profiles">All Data</a></button>
      <button><a href="/profiles?sort=name">Name</a></button><br /><br />
      <table border="1">
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Gender</th>
          <th>age</th>

          <th>Action</th>
        </tr>
        <% profile.forEach((el, i )=> { %>
        <tr>
          <td><%= i + 1%></td>
          <td><%= el.title %></td>
          <td><%= el.address %></td>
          <td><%= el.phoneNumber %></td>
          <td><%= el.gender%></td>
          <td><%= el.age%></td>
          <td>
            <button>
              <a href="/accountDetails/<%= el.id %>">Account Details</a>
            </button>
            <button>
              <a href="/profiles/edit/<%= el.id %>">Edit Customer</a>
            </button>
            <button>
              <a href="/profiles/delete/<%= el.id %>">Delete CUstomer</a>
            </button>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
